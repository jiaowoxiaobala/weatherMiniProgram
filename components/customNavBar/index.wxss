.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 750rpx;
  padding: 0 32rpx;
  color: #fff;
  box-sizing: border-box;
}

.menu-icon {
  float: left;
}

.location {
  width: 180rpx;
  margin: 0 auto;
}

.city {
  padding-left: 10rpx;
}

.mask {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
  z-index: 10;
}

.menu {
  position: absolute;
  left: -560rpx;
  top: 0;
  width: 560rpx;
  height: 100vh;
  transition: transform .3s;
  background: skyblue;
  z-index: 20;
}